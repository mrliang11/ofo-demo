/* projects/my/index.wxss */
.container{
  width: 100%;
  height: 100vh;
  background: #f2f2f2;
}
.user-info{
  padding-top: 60rpx;
  background-color: #fff;
}

.user-info .img image{
  display: block;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  margin: 30rpx auto 40rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, .3);
  overflow: hidden;
}

.user-info .user-name{
  display: block;
  padding: 30rpx 0;
  text-align: center;
}

.my-wallet{
  padding: 40rpx;
  background-color: #fff;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.btn-login{
  width: 90%;
  position: absolute;
  bottom: 60rpx;
  left: 5%;
}